<div data-controller="chatroom-subscription" class="container chatroom shadow p-3 mb-5 rounded mt-3" style="width: 500px; height: 600px; ">
  <h1 class="text-center my-3"><%= @chatroom.name %> chat</h1>

  <div class="messages" data-chatroom-subscription-target="messages" style="height: 500px; overflow: auto;">
    <% @chatroom.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.first_name %> <%= message.user.last_name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>


  <%= simple_form_for [@chatroom, @message],
    html: {class: "d-flex mt-3 "} do |f|
  %>
    <%= f.input :content,
      label: false,
      placeholder: "Message ##{@chatroom.name}",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3 ms-2"%>
  <% end %>
</div>
