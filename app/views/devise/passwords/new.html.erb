<div class="container shadow p-3 mb-5 mt-5 rounded p-5" style="width: 500px;">
<h2 class="text-center">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "bg-transparent border border-primary"  } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary w-100"  %>
  </div>
<% end %>

<div class="mt-3">
<%= render "devise/shared/links" %>
</div>
</div>
