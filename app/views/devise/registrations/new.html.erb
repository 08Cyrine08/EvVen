<div class="container shadow p-3 mb-5 mt-5 rounded p-5" style="width: 500px;">
  <h2 class="text-center">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "bg-transparent border border-primary" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "bg-transparent border border-primary" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "bg-transparent border border-primary" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "bg-transparent border border-primary" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "bg-transparent border border-primary" } %>
      <%= f.input :photo, input_html: { class: "bg-transparent border border-primary" }, as: :file, required: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <div class="mt-3">
  <%= render "devise/shared/links" %>
  </div>
</div>
