<div class="container shadow p-3 mb-5 mt-5 rounded p-5" style="width: 500px;">
  <h2 class="text-center">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "bg-transparent border border-primary" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "bg-transparent border border-primary" } %>
      <%= f.input :remember_me, input_html: {  class: "bg-transparent border border-primary" }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <div class="mt-3">
  <%= render "devise/shared/links" %>
  </div>
</div>
