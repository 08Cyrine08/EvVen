<!DOCTYPE html>
<html>
  <head>
    <title>EvVen</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <script src="https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js"></script>
    <style>
      #navbar {
        padding: 20px 10px;
        width: 100%;
        top: 0;
        /* overflow: hidden; */
        justify-content: space-between;
        background: #140057;
        opacity: 0.8;
        transition: 0.4s;
        position: sticky;
      }

      #logo {
        transition: 0.4s;
        width: 120px;
        height: 90px;
      }

      #nav {
        transition: 0.4s;
        position: absolute;
        top: 40px;
        right: 15px;
      }

      @media screen and (max-width: 580px) {
        #navbar {
        padding: 20px 10px !important;
        }
      }
    </style>
  </head>


  <body>
    <div id="pages-container">
      <main>
        <%= render "shared/navbar" if !current_page?(root_path) %>
        <script>
          window.onscroll = function() {scrollFunction()};

          function scrollFunction() {
            if (document.body.scrollTop > 80 || document.documentElement.scrollTop > 80) {
              document.getElementById("navbar").style.padding = "10px 0px";
              document.getElementById("logo").style.height = "50px";
              document.getElementById("logo").style.width = "50px";
              document.getElementById("nav").style.top = "20px";


            } else {
              document.getElementById("navbar").style.padding = "20px 10px";
              document.getElementById("logo").style.height = "120px"
              document.getElementById("logo").style.width = "90px"
              document.getElementById("nav").style.top = "40px";
            }
          }
        </script>
        <%= render "shared/flashes"%>

        <%= yield %>
      </main>
      <%= render "shared/footer" if !current_page?(root_path) %>
    </div>
  </body>
</html>
