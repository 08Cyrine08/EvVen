<div class="container">
  <h1 class="mt-4">Clubs in <%= @city %>, <%= @date %></h1>

<%= link_to "New venue", new_venue_path if policy(Venue).new? %>
  <div class="row row-cols-1 row-cols-md-3">
    <% @venues.each do |venue| %>
      <div class="col mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= venue.name %></h5>
            <p class="card-text"><%= venue.location %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
