<style>
  .card {
    min-height: 28rem;
  }

  .card-img-container {
    position: relative;
    overflow: hidden;
    height: 16rem;
  }

  .card-img-container img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    object-fit: contain;
  }
</style>


<div class="container mt-5">
  <h1 class="m-4">All clubs</h1>
  <div class="row row-cols-2">
    <% @venues.each do |venue| %>
    <div class="col-4">
      <div class="card mb-5" style="width: 24rem; height: 28rem;">
        <% if venue.photos.attached? %>
          <div class="card-img-container">
            <%= cl_image_tag(venue.photos[0].key, class: "card-img") %>
          </div>
        <% else %>
          <div class="card-img-container">
            <img src="https://res.cloudinary.com/dwouepnpu/image/upload/v1685985732/venue_4_rent/empty_ey7qq4.jpg" class="card-img border-0 rounded-top-5">
          </div>

        <% end %>
        <div class="card-body d-flex flex-column" style="background-color: #6BABFF;">
          <h5 class="card-title text-center border-bottom border-1 border-warning-subtle">
            <i class="fas fa-music"></i> <%= venue.name %>
          </h5>
          <p class="card-text text-center"><%= venue.location %></p>
          <span class="position-absolute bottom-0 m-2">Rate Fee: $<%= venue.price %></span>
          <div class="position-absolute bottom-0 mb-1" style="margin-left: 225px;">
            <%= link_to "View details", venue_path(venue), class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
